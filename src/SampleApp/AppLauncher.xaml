<Window x:Class="SampleApp.AppLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Choose your destiny..." SizeToContent="WidthAndHeight">
    <StackPanel Margin="16">
        <TextBlock Text="Welcome to the Gesture Recogniser!" HorizontalAlignment="Center" FontSize="20" TextWrapping="Wrap" />
        <TextBlock Text="Please choose one of the following options to play!" TextWrapping="Wrap" Margin="0 16 0 0" />

        <Button Content="Base Gesture Recognition" Margin="0 8" Click="LaunchJustGestures" Padding="10" />
        <Button Content="Gesture on Gesture" Margin="0 8" Click="LaunchGestureOnGesture" Padding="10" />
    </StackPanel>
</Window>
